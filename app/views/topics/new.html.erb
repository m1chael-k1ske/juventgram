<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @topic do |f| %> <!--topicクラスのインスタンス, form_for モデル do |f|とendで囲むことでモデル<@topic>のフォームを作成-->
          <div class="form-group">
            <%= f.label :image %> <!--labelタグを作成, image = カラム-->
            <%= f.file_field :image %> <!--ファイル選択ボックスを作成, image = カラム-->
          </div>
          
          <div class="form-group">
            <%= f.label :description %> <!--labelタグを作成, description = カラム-->
            <%= f.text_area :description, class: 'form-control' %> <!--テキストエリアを作成, description = カラム-->
          </div>
          
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %> <!--送信ボタンを作成<投稿>-->
          
        <% end %>
      </div>
    </div>
  </div>
</div>